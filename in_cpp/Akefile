default: dataflow_test
	./dataflow_test

dataflow_test: compile_and_link.sh dataflow_test.cpp predicate_op.h op_interface.h predicate_op.o
	bash compile_and_link.sh dataflow_test dataflow_test.cpp predicate_op.o -lgtest -lpthread

predicate_op.o: compile.sh predicate_op.cpp predicate_op.h
	bash compile.sh predicate_op.cpp

compile.sh: flags.sed compile.template
	sed -f flags.sed <compile.template >compile.sh

compile_and_link.sh: flags.sed compile_and_link.template
	sed -f flags.sed <compile_and_link.template >compile_and_link.sh

clean:
	rm -f dataflow_test predicate_op.o compile.sh compile_and_link.sh
